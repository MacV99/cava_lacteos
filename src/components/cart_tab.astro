---
/**
 * Componente del carrito lateral.
 * HTML + CSS. (Los handlers de limpiar/comprar/close siguen en Shop para usar tu estado/funciones.)
 */
---

<div class="cartTab flex-column">
  <h2>Tu Carrito</h2>
  <div class="listCart flex-column"></div>
  <div class="btn">
    <button class="close">Cerrar</button>
    <button class="clean">Limpiar</button>
    <button class="buy">Confirmar <br /> Orden</button>
  </div>
</div>

<style is:inline>
  .cartTab {
    width: 375px;
    background-color: var(--clr-white);
    color: var(--clr-dark);
    position: fixed;
    top: 0;
    right: -410px;
    bottom: 0;
    transition: 0.3s ease-in-out;
    border: solid 1px var(--clr-gray);
    z-index: 111;
  }
  .showCart .cartTab {
    right: 0;
  }
  .cartTab > h2 {
    padding: 15px 14px;
    font-size: 22px;
    color: var(--clr-dark);
    letter-spacing: 3px;
    border-bottom: solid 1px var(--clr-gray);
    text-transform: uppercase;
    width: 100%;
    text-align: center;
  }

  .cartTab .btn {
    display: flex;
    margin-top: auto;
    width: 100%;
  }
  .cartTab button {
    color: var(--clr-dark);
    width: 100%;
    height: 70px;
    font-size: 12px;
    font-weight: 700;
    border: none;
    border-top: solid 1px var(--clr-gray);
    cursor: pointer;
  }
  .cartTab button:hover {
    background-color: var(--clr-gray);
  }
  .cartTab .listCart {
    overflow: auto;
    width: 100%;
  }
  .cartTab .listCart .item {
    text-align: center;
    align-items: center;
    justify-content: space-between;
    background-color: #f5f5f5;
    font-size: 11px;
    width: 100%;
    padding: 0 14px;
  }
  .cartTab .listCart .item div.image {
    width: 16%;
    height: 70px;
  }
  .cartTab .listCart .item img {
    height: 50px;
    padding: 1px;
  }
  .cartTab .listCart .item .name {
    width: 29%;
  }
  .cartTab .listCart .item .totalPrice {
    width: 24%;
  }
  .cartTab .listCart .quantity {
    border-radius: 3px;
    border: solid 1px var(--clr-dark);
    width: 24%;
    justify-content: space-between;
  }
  .cartTab .listCart .quantity span {
    width: 25px;
    height: 25px;
    border-radius: 2px;
    color: var(--clr-dark);
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    background-color: var(--clr-dark);
  }
  .cartTab .listCart .quantity span .bi {
    color: var(--clr-white);
    font-size: 16px;
  }
  .cartTab .listCart .quantity span:nth-child(2) {
    background-color: transparent;
    color: var(--clr-dark);
    cursor: auto;
    width: 23px;
  }
  .cartTab .listCart .item:nth-child(even) {
    background-color: #ececec;
  }
  .cartTab .listCart::-webkit-scrollbar {
    width: 0;
  }
  .cartTab .cart-total {
    padding: 7px;
    font-size: 18px;
    margin-top: 7px;
    text-transform: uppercase;
    letter-spacing: 3px;
  }
</style>
