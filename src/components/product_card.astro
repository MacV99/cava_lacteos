---
/**
 * Plantilla reutilizable para tarjetas de producto.
 * Se clona vía JS: document.getElementById('product-card-tpl')
 */
---

<template id="product-card-tpl">
  <div class="item flex-column" data-id="">
    <div class="item-img-wrapper">
      <img src="" alt="" />
    </div>
    <h5 class="product-name"></h5>
    <h5 class="price"></h5>
    <div class="flex-row">
      <button class="addCart button1">Reservar</button>
    </div>
  </div>
</template>

<style>
  .item {
    width: 100%;
    max-width: 280px;
    align-items: baseline;
    flex: 0 0 auto;
    justify-content: space-around;
    text-align: left;
    background-color: #ffffff;
    border-radius: 14px;
    border: solid 1px var(--clr-gray);
    padding: 14px;
    cursor: pointer;
    transition: 0.2s ease;
  }

  /* Contenedor de la imagen */
  .item-img-wrapper {
    width: 100%;
    height: 300px;
    min-height: 100px;
    background-color: var(--clr-gray);
    border-radius: 7px;
    overflow: hidden; /* aquí se corta el zoom */
  }

  /* Imagen dentro del contenedor */
  .item-img-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease; /* animación del zoom */
  }

  /* Zoom al hacer hover en la card */
  .item:hover .item-img-wrapper img {
    transform: scale(1.08);
  }

  .item .flex-row {
    position: relative;
    width: 100%;
    margin-top: 10px;
    justify-content: left;
  }

  .item .product-name {
    font-size: 11px;
    color: var(--clr-dark);
    margin: 7px 0;
  }

  .item .price {
    letter-spacing: 3px;
    font-size: 11px;
    margin-bottom: auto;
  }

  .item button {
    font-size: 11px;
    border-radius: 9px;
  }
</style>
